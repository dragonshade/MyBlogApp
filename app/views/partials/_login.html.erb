<%= form_for :user, url: user_session_path, html:{class:"form-group"} do |f| %>
	<%= f.label :email %> <br>
	<%= f.text_field :email, class:"form-control" %> <br>

	<%= f.label :password %> <br>
	<%= f.password_field :password , class:"form-control"%> <br>
	<%= f.submit "Login", class:"btn btn-default", id: "login"%> 
  New user? <%= link_to 'Sign Up', new_user_registration_path %>
<% end %>
